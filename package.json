{
  "name": "express",
  "version": "1.15.0",
  "description": "Learn everything express. Each version of a project introduce one or more of the core features of express - routing, middleware, request and response handling, templating engines, session management, security, error handling, static file serving, real-time communication, API development, database integration, deployment, extensibility, testing, internationalization (i18n), logging and monitoring, file uploads, webhooks, and command-line interface (CLI) ",
  "main": "dist/index.js",
  "scripts": {
    "dev": "DEBUG=app:* ts-node-dev --env-file=.env.local --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node --env-file=.env.local dist/index.js",
    "build:watch": "tsc --watch",
    "predeploy": "npm run build",
    "deploy": "npm start",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "prettier": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "precommit": "npm run lint && npm run prettier"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "mongoose",
    "typescript",
    "nodemailer",
    "json",
    "web",
    "token",
    "graphql",
    "redis",
    "cookie-parser",
    "authentication",
    "api"
  ],
  "author": "Bello Osagie",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "geoip-lite": "^1.4.10",
    "globals": "^15.9.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "mongoose-paginate-v2": "^1.8.3",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.14",
    "slugify": "^1.6.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.2.0",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "debug": "^4.3.6",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "global": "^4.4.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
